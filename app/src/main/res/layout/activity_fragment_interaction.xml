<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._3_fragment_interaction.FragmentInteractionActivity">

    <fragment
        android:id="@+id/listFragment"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:name="android.kotlin.elements._3_fragment_interaction.ListFragment"/>

    <fragment
        android:id="@+id/detailFragment"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:name="android.kotlin.elements._3_fragment_interaction.DetailFragment"/>

</LinearLayout>