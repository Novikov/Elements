<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/simpleJavaRecyclerViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickJavaRecyclerView"
            android:text="Simple Java Recycler View"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/simpleKotlinRecyclerViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickKotlinRecyclerView"
            android:text="Simple Kotlin Recycler View"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/mvvm_data_binding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickKotlinRecyclerView"
            android:text="MVVM via data binding"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/mvvm_gac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickKotlinRecyclerView"
            android:text="MVVM via gac"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</ScrollView>